{
    "name": "QR Scanner",
    "version": "0.0.1",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "desktopCapture",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        //"default_title": "popup"
    },
    "web_accessible_resources": [{
        "resources": ["js/sltScan-content-script.js"],
        "matches": ["<all_urls>"]
    }],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/sltScan-content-script.js"]
    }],
    "background": {
        "service_worker": "./js/background.js"
    }
}